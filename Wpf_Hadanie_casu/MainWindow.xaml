<Window x:Class="Wpf_Hadanie_casu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Hadanie_casu"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="Black" />
            <GradientStop Color="#FF517B6C"
                          Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button Name="Start_button"
                Content="Start"
                HorizontalAlignment="Left"
                Margin="112,243,0,0"
                VerticalAlignment="Top"
                FontSize="25"
                Click="Start_button_Click" />

        <Button Name="Stop_button"
                Content="Stop"
                HorizontalAlignment="Left"
                Margin="231,243,0,0"
                VerticalAlignment="Top"
                FontSize="25"
                Click="Stop_button_Click">
        </Button>

        <TextBox Name="text"
                 HorizontalAlignment="Left"
                 Margin="85,101,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Top"
                 FontSize="30"
                 Width="229"
                 Height="116"
                 Background="White"
                 Foreground="Black"
                 IsEnabled="False" />

        <TextBlock HorizontalAlignment="Left"
                   Margin="10,10,0,0"
                   TextWrapping="Wrap"
                   Text="Zadaj cas"
                   VerticalAlignment="Top"
                   FontSize="50"
                   Foreground="White" />

        <Button Name="Check_button"
                Content="Check"
                HorizontalAlignment="Left"
                Margin="329,243,0,0"
                VerticalAlignment="Top"
                FontSize="25"
                Click="Check_button_Click" />

        <Label Name="Vysledok"
               Content=""
               HorizontalAlignment="Left"
               Margin="427,101,0,0"
               VerticalAlignment="Top"
               Foreground="White"
               FontSize="30"
               Height="95"
               Width="283" />

        <TextBlock HorizontalAlignment="Left"
                   Margin="400,19,0,0"
                   TextWrapping="Wrap"
                   Text="Vysledok:"
                   VerticalAlignment="Top"
                   Foreground="White"
                   FontSize="50" />
    </Grid>
</Window>





